<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<!-- Esta es LA BD que tiene la informacion mÃ¡s actualizada del componenete BIO. -->

	<session-factory>
		<!-- PARA UTILIZAR PostgreSQL-->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/ara_m3s</property>		
		<property name="connection.username">miniatta</property>
		<property name="connection.password">inbio1234</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>


		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">5</property>


		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache  -->
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>


		<!--  Echo all executed SQL to stdout  -->
		<!-- <property name="show_sql">true</property> -->
		<!-- Create the database schema on startup -->
		<!--<property name="hbm2ddl.auto">create</property>-->


		<!-- Clases que se estan mapeando -->
		<mapping resource="org/inbio/m3s/persistence/ara/GatheringObservation.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/Person.hbm.xml" />				
		<mapping resource="org/inbio/m3s/persistence/ara/Site.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/Institution.hbm.xml"/>
		<mapping resource="org/inbio/m3s/persistence/ara/Taxon.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/PersonProfile.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/Profile.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/Specimen.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/Identification.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/CollectorObserver.hbm.xml" />
		
		
		<!--
		<mapping resource="org/inbio/m3s/persistence/ara/Observation.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/ara/ObservedTaxon.hbm.xml" />
		 -->

	</session-factory>

</hibernate-configuration>