<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<!-- Esta es LA BD que tiene la informacion mÃ¡s actualizada del componenete BIO. -->

	<session-factory>
		<!-- PARA UTILIZAR ORACLE9i -->
		<property name="hibernate.connection.driver_class">
			oracle.jdbc.driver.OracleDriver
		</property>
		<!-- m3sinbio -->
		<property name="hibernate.connection.password">
			m3sinbio
		</property>
		<property name="hibernate.connection.url">
			jdbc:oracle:thin:@10.0.0.38:1521:atta
		</property>
		<!-- m3s -->
		<property name="hibernate.connection.username">m3s</property>
		<!--<property name="hibernate.default_schema">ATTA</property>-->
		<property name="hibernate.dialect">
			org.hibernate.dialect.Oracle9Dialect
		</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">5</property>


		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache  -->
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>


		<!--  Echo all executed SQL to stdout  -->
		<!-- <property name="show_sql">true</property> -->
		<!-- Create the database schema on startup -->
		<!--<property name="hbm2ddl.auto">create</property>-->


		<!-- Clases que se estan mapeando -->
		<mapping resource="org/inbio/m3s/persistence/atta/Gathering.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/Identification.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/INBioInstitution.hbm.xml"/>
		<mapping resource="org/inbio/m3s/persistence/atta/INBioPerson.hbm.xml" />		
		<mapping resource="org/inbio/m3s/persistence/atta/Observation.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/ObservedTaxon.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/PersonProfile.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/Profile.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/Site.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/Specimen.hbm.xml" />
		<mapping resource="org/inbio/m3s/persistence/atta/Taxon.hbm.xml" />

	</session-factory>

</hibernate-configuration>